{
    "name": "DASI Development",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace/dasi/bundle",
    "remoteUser": "developer",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "${workspaceFolder}/dasi/.venv/bin/python",
                "python.formatting.provider": "black",
                "python.linting.ruffEnabled": true,
                "python.linting.enabled": true,
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "pydasi/tests"
                ],
                "cmake.configureOnOpen": false,
                "cmake.generator": "Ninja",
                "cmake.buildDirectory": "/tmp/build/dasi-bundle",
                "cmake.exportCompileCommandsFile": true,
                "cmake.installPrefix": "/usr/local",
                "cmake.cmakePath": "/usr/bin/cmake",
                "cmake.configureSettings": {
                    "CMAKE_C_COMPILER": "/opt/rh/gcc-toolset-14/root/usr/bin/gcc",
                    "CMAKE_CXX_COMPILER": "/opt/rh/gcc-toolset-14/root/usr/bin/g++"
                },
                "cmake.sourceDirectory": "${workspaceFolder}",
                "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-python.pytest-adapter",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    }
}
