#!/bin/bash

shopt -s nullglob

BINDIR=$(dirname $0)
PROC=$1

### built-ins

function usage {
    echo "Usage $(basename $0): command [options] ..."
    echo "General purpose commands are:"

    (
    declare -F | grep dasi_builtin_ | sed 's/.*dasi_builtin_/   /'
    for n in list info
    do
        echo "   $n"
    done
    ) | sort
}

function dasi_builtin_version {
    echo @dasi_VERSION_STR@
}

function dasi_builtin_home {
    echo $($BINDIR/dasi-info --home)
}

function dasi_builtin_help {
    usage
}

###

declare -f "dasi_builtin_$PROC" > /dev/null
if [[ $? -eq 0  ]]
then
    "dasi_builtin_$PROC"
    exit
fi

CMD=$BINDIR/dasi-$PROC

if [[ ! -x $CMD ]]
then
    usage 1>&2
    exit 1
fi

shift
exec $CMD "$@"
